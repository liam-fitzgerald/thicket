{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "@types"],
  "compilerOptions": {
	  "outDir": "./lib",
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es2015",
    "pretty": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  }
}
